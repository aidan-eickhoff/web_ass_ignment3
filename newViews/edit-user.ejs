<%- contentFor('body') %>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Edit User</li>
    </ol>
</nav>

<!--{{#if alert}}-->
<% if (locals.message) {%>
<div class="alert alert-success alert-dismissible fade show" role="alert">
    <%- message%>
<!--    {{alert}}-->
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>

<% users.forEach(function (user) { %>
<!--{{#each users}}-->
<!--<form class="row g-3 needs-validation" method="POST" action="/edituser/{{this.id}}" novalidate>-->
<form class="row g-3 needs-validation" method="POST" action="/edituser/<%= user.id %>" novalidate>
<!--    {{> user-form}}-->
    <%- include('partials/user-form', {user:user}); %>

</form>
<% }); %>
<!--{{/each}}-->